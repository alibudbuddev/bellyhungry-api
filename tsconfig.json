{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@auth/*": ["src/auth/*"],
      "@guards/*": ["src/guards/*"],
      "@pipes/*": ["src/pipes/*"],
      "@core/*": ["src/core/*"]
    }
  }
}
