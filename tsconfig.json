{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@aggregates/*": ["src/aggregates/*"],
      "@auth/*": ["src/auth/*"],
      "@core/*": ["src/core/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@guards/*": ["src/guards/*"],
      "@modules/*": ["src/modules/*"],
      "@pipes/*": ["src/pipes/*"],
      "@schema/*": ["src/schema/*"]
    }
  }
}
